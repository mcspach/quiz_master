<%# <div class="btn mb-4" style="background-color: #25c1a9; color: white; font-size: 20px">
  <p><strong>Good Work!</strong></p><p>You don't have any quizzes right now.</p> %>

<!-- class="col-3" -->
<div class="container mt-4">
  <div class="row justify-content-around mr-1">
  <%# flexbox with direction: row and evenly spaced %>
    <%= link_to  rewards_user_path(current_user), class: "col-3" do%>
      <div class="mini-card align-center">
        <%#= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606869520/icon-2.6s-194px_foaxas.png", class: "medal-img heart")%>
      <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_iYAdl2.json"  background="transparent"  speed=".6"  style="height: 110px; width:20vw;"  autoplay></lottie-player>
      <p class="text-dark text-center">Rewards</p>
      </div>
    <% end %>
    <%= link_to  leaderboard_path(current_user.company), class: "col-3"  do%>
      <div class="mini-card align-center">
        <%#= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606870192/winner-1.1s-194px_cwvyho.png", class: "trophy-img")%>
        <lottie-player class="pr-1" src="https://assets7.lottiefiles.com/private_files/lf30_W3J9n9.json"  background="transparent"  speed=".4"  style="height:110px; width:20vw;"   autoplay></lottie-player> <!--can add 'loop' before autoplay to make it go forever-->
        <p class="text-center text-dark">Rank</p>
      </div>
    <% end %>
    <%= link_to  library_path, class: "col-3"  do%>
      <div class="mini-card align-center">
        <%#= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606870539/encyclopedia-1.1s-194px_1_adisfv.png", class: "book-img")%>
        <lottie-player class="heart" src="https://assets5.lottiefiles.com/datafiles/5FFwoVNq8EcKMH4/data.json"  background="transparent"  speed=".5"  style="height:110px; width:20vw;"  autoplay></lottie-player>
        <p class="text-center text-dark">Library</p>
      </div>
    <% end %>


    <%= link_to  analytics_path(current_user), class: "col-3" do%>

        <%#= image_tag 'machine-learning.png', class: 'img-thumbnail manager-icons' %>
        <div class="mini-card align-center">
          <lottie-player class="" src="https://assets1.lottiefiles.com/packages/lf20_E3BfOE.json" mode="bounce" background="transparent"  speed=".4"  style="height:110px; width:20vw;" autoplay></lottie-player>
          <p class="text-center text-dark">Analytics</p>
        </div>
    <% end %>
  </div>
</div>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

