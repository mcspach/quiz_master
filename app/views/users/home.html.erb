<%= render 'shared/banner' %>
<div class="container">
  <h1>Welcome, <%= @user.first_name.capitalize %>!</h1>
  <div class="row justify-content-center pt-3 robot">
    <%= image_tag("say_hi.gif") %>
    <div class="btn"> <%= link_to "Start Quiz", quiz_results_new_path(@quiz_id) %></div>
  </div>
</div>
<!-- #F9BC11 -->
<%# <div class="btn mb-4" style="background-color: #25c1a9; color: white; font-size: 20px">
  <p><strong>Good Work!</strong></p><p>You don't have any quizzes right now.</p> %>


<div class="container mt-4">
  <div class="row justify-content-around">
  <%# flexbox with direction: row and evenly spaced %>
    <%= link_to  rewards_user_path(current_user) do%>
      <div class="col-12 mini-card align-center">
        <%= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606869520/icon-2.6s-194px_foaxas.png", class: "medal-img heart pl-2")%>
        <p class="text-dark text-center">Rewards</p>
      </div>
    <% end %>
    <%= link_to  leaderboard_path(current_user.company) do%>
      <div class="col-12 mini-card align-center">
        <%#= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606870192/winner-1.1s-194px_cwvyho.png", class: "trophy-img")%>
        <lottie-player class="heart pl-1" src="https://assets7.lottiefiles.com/private_files/lf30_W3J9n9.json"  background="transparent"  speed=".4"  style="width: 120px; height: 120px;"   autoplay></lottie-player> <!--can add 'loop' before autoplay to make it go forever-->
        <p class="text-center text-dark">Leaderboard</p>
      </div>
    <% end %>
    <%= link_to  library_path do%>
      <div class="col-12 mini-card mt-3 align-center">
        <%#= image_tag("https://res.cloudinary.com/duj93wpnu/image/upload/v1606870539/encyclopedia-1.1s-194px_1_adisfv.png", class: "book-img")%>
        <lottie-player class="heart pl-1" src="https://assets5.lottiefiles.com/datafiles/5FFwoVNq8EcKMH4/data.json"  background="transparent"  speed=".5"  style="width: 120px; height: 120px;"  autoplay></lottie-player>
        <p class="text-center text-dark">Library</p>
      </div>
    <% end %>
    <%= link_to  library_path do%>
        <%#= image_tag 'machine-learning.png', class: 'img-thumbnail manager-icons' %>
        <div class="col-12 mini-card mt-3 align-center">
          <lottie-player class="ml-2" src="https://assets1.lottiefiles.com/packages/lf20_E3BfOE.json" mode="bounce" background="transparent"  speed=".4"  style="width: 120px; height: 120px;"  loop  autoplay></lottie-player>
          <p class="text-center text-dark">Analytics Report</p>
        </div>
    <% end %>
  </div>
</div>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

