<%= render 'shared/banner' %>

<h1>Results</h1>

<div class="container">
  <div class="row justify-content-center stats-box">
    <div class="col-6 p-2">
      <div class="result_item pt-1">
        <h2 class="bold-text">Your rank:</h2>
        <span class="smaller-txt">1st</span>
      </div>
    </div>

    <div class="col-6 p-2">
      <div class="result_item pt-1">
        <h2 class="bold-text">Team rank:</h2>
        <span class="smaller-txt">2nd</span>
      </div>
    </div>

    <div class="col-6 p-2">
      <div class="result_item pt-1">
        <h2 class="bold-text">Points today:</h2>
        <span class="smaller-txt">200</span>
      </div>
    </div>

    <div class="col-6 p-2">
      <div class="result_item pt-1">
        <h2 class="bold-text">Week:</h2>
        <span class="smaller-txt">8 of 12</span>
      </div>
    </div>
  </div>

  <h3 class="d-block mb-2">Correct answers this quiz</h3>
  <div class="row justify-content-center">
    <div class="bubble result-bubble">
      <h1 class="big-number pl-3 pb-2">66<span class="percent">%</span></h1>
    </div>
  </div>

  <div class="row mt-4">
    <div class="stats-button col-12">
      <%= link_to "See My Statistics", stats_user_path(@user), class: "btn btn-block next-button"%>
    </div>
  </div>
</div>





