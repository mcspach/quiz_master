<%= render 'shared/banner' %>

<h1>Today's Quiz</h1>

<div class="robot">
  <%= image_tag("robot_question.gif") %>
</div>

<% @quiz.questions.each_with_index do |question, index| %>

  <div class="question success <%= "d-none" if index != 0 %>" >
    <div class="content">
      <p><%= question.content %></p>
      <div class="q-message correct-message d-none"><p>That's right.</p></div>
      <div class="q-message incorrect-message d-none"><p>Sorry, that's not correct.</p></div>
    </div>
    <div class="answers">
      <ul>
      <% question.answers.each do |answer| %>
        <li>
          <label for="question-<%= question.id %>-answer-<%= answer.id %>"><%= answer.content %></label> 
          <input type="radio" name="question-<%= question.id %>" value="<%= answer.is_correct %>" id="question-<%= question.id %>-answer-<%= answer.id %>" />
        </li>
      <% end %>
      </ul>
    </div>
    <div class="actions"> 
    <%# this entire div needs to stay the same-ish size, but fit either one or two buttons. %>
      <button class="btn submit-button">Submit</button>
      <button class="btn next-button d-none">Next Question</button>
      <button class="btn d-none">Show Explanation</button>
      <button class="btn d-none">Hide Explanation</button>
    </div>
  </div>
<% end %>

<%= javascript_pack_tag 'question_answer' %>