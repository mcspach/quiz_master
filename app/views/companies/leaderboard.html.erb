<style>


.btn {
  background-color: #E5F7FF;
  display: inline-block;
  -webkit-transform: skew(-15deg);
  /*-moz-transform: skew(-15deg);*/
  /*-o-transform: skew(-15deg);*/
  /*-ms-transform: skew(-15deg);*/
  /*transform: skew(-15deg);*/
  font-family: sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.33;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;
}

.btn .unskew {
  -webkit-transform: skew(15deg);
  -moz-transform: skew(15deg);
  -o-transform: skew(15deg);
  -ms-transform: skew(15deg);
  transform: skew(15deg);
  display: inline-block;
  color:black;
}

.individual {
  border-top-left-radius: 25px;
  border-bottom-left-radius: 50px;
  padding: 8px 20px 8px 30px;
}

.team {
  border-bottom-right-radius: 25px;
  border-top-right-radius: 50px;
  padding: 8px 30px 8px 20px;
}

.outline {
  color: #ffffff;
  border: 2px solid #25C1A9;
  transition: all .3s;
}

/*.outline:hover {
  background-color: #ffffff;
  color: #333333;
}*/

</style>

<%= render 'shared/banner' %>

<h1>Leaderboard</h1>

<div class="container">
  <div class="cta-buttons">
  <a href="#" target="_blank" class="individual btn outline">
    <span class="unskew">Indivudual Rank</span>
  </a>&nbsp;
  <a href="#" target="_blank" class="team btn outline">
    <span class="unskew">Team Rank</span>
  </a>
</div>

</div>


<div>
  <div> <p>Your Current Points: <strong><%= @your_points %></strong></p> </div>
  <div> <p>Your Team Rank: <strong>2nd Place</strong></p></div>
</div>

<div>
<table>
  <% @drivers.each_with_index do |driver, index| %>
    <tr>
      <td><%= index + 1 %></td> <td><%= driver[:name] %></td> <td><%= driver[:points] %><td>
    </tr>
    <% end %>
  </table>
</div>
