<%= render 'shared/banner' %>
<div class="container text-center">
  <h1>Select Safety Refresher</h1>
</div>
<div class="container answer-box text-center mt-5">
  <%= form_with url: twilio_path, method: :get, local: true do |f| %>
    <%['pre_trip_inspection', 'post_trip_inspection', 'distraction_driving', 'proper_incident_response'].each do |option| %>
      <div class="answer-item py-2 pl-4 pr-1">
        <%= f.label "safety_refresher_#{option}", option.humanize, class: "answer-content pt-1" %>
        <%= f.radio_button :safety_refresher, option  %>
        <!-- <br /> -->
      </div>

    <% end %>
    <%= f.submit 'Submit', class: 'btn manager-submit' %>
  <% end %>
</div>
<div class="container mt-5 text-center">
  <div class="row">
    <div class="col-12">
      <h4><%= link_to '<< Back', :back, class: 'test-back-link' %></h4>
    </div>
  </div>
</div>

