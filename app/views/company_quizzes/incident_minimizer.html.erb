<%= render 'shared/banner' %>
<div class="container text-center">
  <h1>Select Incident Minimizer</h1>
</div>
<div class="container text-center mt-5">
  <%= form_with url: twilio_path, method: :get, local: true do |f| %>
    <%['turning_left', 'stopping_safely', 'checking_brakes', 'load_restraint'].each do |option| %>
    <div class="answer-item py-2 pl-4 pr-1">
      <%= f.label "minimizer_topic_#{option}", option.humanize, class: "answer-content pt-1" %>
      <%= f.radio_button :minimizer_topic, option  %>
    </div>
      <!-- <br /> -->
    <% end %>
    <%= f.submit 'Submit', class: 'btn manager-submit' %>
  <% end %>
</div>
<div class="container mt-5 text-center">
  <div class="row">
    <div class="col-12" >
      <h4><%= link_to '<< Back', :back, class: 'test-back-link' %></h4>
    </div>
  </div>
</div>
