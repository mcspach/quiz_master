<%= render 'shared/banner' %>
<div class="container text-center">
  <h1>Home</h1>
  <h2 class="mt-5">Create a quiz</h2>
</div>
<div class="container text-center mt-5">
  <p>For increasing general safety awareness:</p>
  <div class="row">
    <div class="col-12">
      <%= link_to 'Safety refresher', safety_refresher_path, class: 'btn btn-large' %>
    </div>
    <div class="col-12 my-3">
      <h4><strong>OR</strong></h4>
    </div>
    <div class="col-12">
      <p>For when a serious safety incident has occurred:</p>
      <%= link_to 'Incident minimizer', incident_minimizer_path, class: 'btn btn-large' %>
    </div>
  </div>
</div>
<div class="container mt-5 text-center">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'quiz.png', class: 'img-thumbnail manager-icons' %>
      <p class="manager-icon-text">All Quizzes Created</p>
    </div>
    <div class="col-4">
      <%= image_tag 'research.png', class: 'img-thumbnail manager-icons' %>
      <p class="manager-icon-text">Results in Progress</p>
    </div>
    <div class="col-4">
      <%= image_tag 'machine-learning.png', class: 'img-thumbnail manager-icons' %>
      <p class="manager-icon-text">Analytics Report</p>
    </div>
  </div>
</div>